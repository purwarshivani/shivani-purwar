import java.util.Scanner;

public class Tax {
	public static void main(String[] args) {
		Scanner scan= new Scanner(System.in);
		final double taxrate=0.2;
		System.out.println("ï¿½nput your income amount");
		double income, deducted;
		income=scan.nextDouble();
		deducted=income*taxrate;
		System.out.println("the amount after deducton" +(income-deducted));
		
		
		
		
		System.out.println("the deducted amount" +deducted);
	}
	

}

Q.4.2

import java.util.Scanner;

public class Area {
	public static void main(String[] args) {
		int r;
		double ra =7.5,area;
		Scanner s = new Scanner(System.in);
		System.out.println("Enter radius of circle :");
		r = s.nextInt();
		area = ra * r * r;
		System.out.println("Area of Circle :" +area);
	}

}

Q.4.1

import java.lang.*;
import java.io.*;
 
public class Box {
	
		int length,breadth,height;
		Box(int I,int b,int h){
			 length=I;
			 breadth=b;
			 height=h;
		}
		public void display() {
			int volume=length*breadth*height;
			System.out.println("volume of box is " + volume);
			
		}
	}



class Boxdemo{
	public static void main(String args[]) {
		Box b=new Box(10,20,30);
		b.display();
		
	}
}


