Q.4.3
import java.util.Scanner;

public class Marks {
	public static void main(String [] args) {
		double num = 0;
		double x = 1;
		Scanner in =new Scanner(System.in);
		System.out.println("input the number(n)");
		int n = in.nextInt();
		while (x <= n) {
			System.out.println("input number" + "("+ (int) x +")" + ":");
			num += in.nextInt();
			x +=1;
		}
		
		double avgn = (num / n);
		
		System.out.println("Average:" + avgn);
		
	}

}

