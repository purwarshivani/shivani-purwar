import java.util.Scanner;

import javax.swing.JOptionPane;

public class Numeric {
	public static void main(String[] args) {
		double radius;
		double volume;
		String diameter;
		Scanner s= new Scanner(System.in);
		
		diameter = JOptionPane.showInputDialog("enter the diameter of a sphere.");
		double diamete = 0;
		radius= diamete / 2;
		
		volume = (4.0/ 3)* Math.PI * Math.pow(radius, 3);
		
		JOptionPane.showMessageDialog(null, "The radius for the sphere is" + radius+ "and the volume of the sphere is");
		
		
	}

}


Q.4.7
import java.util.Scanner;

public class Seconds {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int S;
		int M;
		int H;
		
		System.out.println("Enter the number of seconds");
		S=sc.nextInt();
		H= S/3600;
		M=(S%3600)/60;
		int seconds_output=(S%3600)%60;
		System.out.println("the time entered in hours,minutes and seconds :");
		System.out.println("H: " + H +"  "+ "M: " +M +"  "+ "S: " +S );
		
		
		
	}

}
