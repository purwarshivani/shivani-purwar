
import java.util.Scanner;
import java.text.DecimalFormat;

public class FarIntoCel {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		DecimalFormat df=new DecimalFormat();
		System.out.println("Enter temprature in Farenhit");
		float far=scan.nextFloat();
		float cel=(far-32)*5/9;
		System.out.println("Temprature in Celcius "+ df.format(cel));
				
	}

}

import java.util.Scanner;
public class Inch {
	public static void main(String[] args){
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter the number in centimeter");		
		int cen=scan.nextInt();
		final double onecen=0.3937;
		System.out.println("Value in inch is "+(cen*onecen));
	}
}

import java.util.Scanner;


public class Inte {
	public static void main(String[] args){
		Scanner scan=new Scanner(System.in);
		
		System.out.println("enter the first no.");
		int num1=scan.nextInt();
		System.out.print("enter the second no.");
		int num2=scan.nextInt();
		int a=num1+num2;
		num1=a-num1;
		num2=a-num2;
		System.out.println("the swap number is " + num1+" " +num2);
		
	}

}

import java.util.Scanner;


public class Pizza {
public static void main(String[] args){
	Scanner scan=new Scanner(System.in);
	System.out.println("enter the no.of pizza");
	 int p= scan.nextInt();
	 System.out.println("enter the no.of topping");
	 int t=scan.nextInt();
	 float cost=(float)(p*12+t*1.5);
	 float  tax=((float)(0.05)* cost);
	 float finalcost=cost+tax;
	 System.out.println("recipt");
	 System.out.println("no of pizza" +p);
	 System.out.println("no.of toppin" +t);
	 System.out.println("cost(incl.tax" +finalcost);
	
}
}

import java.util.Scanner;


public class Rad {
	public static void main(String[] args){
		Scanner scan=new Scanner(System.in);
		System.out.println("enter the radius");
		int r= scan.nextInt();
		double area=Math.PI*Math.pow(r, 2);
		System.out.println("area of radius" +area);
	}

}

import java.util.Scanner;

public class SecreteNUmber {
	public static void main(String[] args){
		Scanner scan=new Scanner(System.in);
		System.out.println("Think number between 1 to 1000");
		System.out.print("divide by 7 and get the reminder");
		int rem1=scan.nextInt();
		rem1 *=715;
		System.out.println("divide by 11 to tell the reminder ");
		int rem2=scan.nextInt();
		rem2 *=364;
		System.out.println("divided by 13 to tell the reminder ");
		int rem3= scan.nextInt();
		rem3 *=924;
		int sec=(rem1+rem2+rem3)%1001;
		System.out.println("your secert num is " + sec);
	}
}
